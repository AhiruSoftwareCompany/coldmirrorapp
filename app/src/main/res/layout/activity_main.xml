<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/flipper"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:background="#000000"
             android:gravity="center"
    >

    <LinearLayout
