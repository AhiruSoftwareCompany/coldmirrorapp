                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/category_rdm"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#F7B600"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="68dp"
                            android:onClick="onClick"
                            android:tag="unzufrieden"
                            android:text="@string/unzufrieden"
                            android:textColor="#F7B600"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="68dp"
                            android:onClick="onClick"
                            android:tag="krankenwagen"
                            android:text="@string/krankenwagen"
                            android:textColor="#F7B600"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="68dp"
                            android:onClick="onClick"
                            android:tag="coldmirrormachtpornos"
                            android:text="@string/coldmirrormachtpornos"
                            android:textColor="#F7B600"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="68dp"
                            android:onClick="onClick"
                            android:tag="hi1"
                            android:text="@string/hi1"
                            android:textColor="#F7B600"/>

                        <Button

                            android:layout_width="match_parent"
                            android:layout_height="68dp"
                            android:onClick="onClick"
                            android:tag="fickmichblick"
                            android:text="@string/fickmichblick"
                            android:textColor="#F7B600"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="68dp"
                            android:onClick="onClick"
                            android:tag="boahistdaslustig"
                            android:text="@string/boahistdaslustig"
                            android:textColor="#F7B600"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="68dp"
                            android:onClick="onClick"
                            android:tag="brutalekillerspiele"
                            android:text="@string/brutalekillerspiele"
                            android:textColor="#F7B600"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="68dp"
                            android:onClick="onClick"
                            android:tag="kindheitgeloescht"
                            android:text="@string/kindheitgeloescht"
                            android:textColor="#F7B600"
                            />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="68dp"
                            android:onClick="onClick"
                            android:tag="ahahahalustig"
                            android:text="@string/ahahahalustig"
                            android:textColor="#F7B600"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="68dp">

                        </View>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/search"
                android:textAlignment="center"
                android:textSize="20sp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/stop2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/micdrop"
                android:textColor="#FFFFFF"/>

        </LinearLayout>

        <SearchView
            android:id="@+id/searchField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:orientation="horizontal"
            android:queryHint="Search"/>

        <ListView
            android:id="@+id/quotelist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#444444"
            android:dividerHeight="2dp"/>

    </LinearLayout>

</ViewFlipper>