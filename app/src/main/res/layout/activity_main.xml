                            android:onClick="onClick"
                            android:tag="hellemal"
                            android:text="@string/hellemal"
                            android:textColor="#FF69B4"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="68dp"
                            android:onClick="onClick"
                            android:tag="lache1"
                            android:text="@string/lache1"
                            android:textColor="#FF69B4"/>

                        <Button
                            android:layout_width="match_parent"
